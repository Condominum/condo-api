<%= I18n.t("email.elevator.pending_notification_subject") %>
========================================

<% if @elevator_booking.moveType == 2 %>
  <%= I18n.t("email.elevator.move") %>
<% else %>
  <%= I18n.t("email.elevator.delivery") %>
<% end %>
<%= I18n.t("email.elevator.start") %>: <%= @elevator_booking.start.in_time_zone("Eastern Time (US & Canada)").strftime("%B %-d, %Y %l:%M %p") %>
<%= I18n.t("email.elevator.end") %>: <%= @elevator_booking.end.in_time_zone("Eastern Time (US & Canada)").strftime("%B %-d, %Y %l:%M %p") %>
<%= I18n.t("email.elevator.unit") %>: <%= @elevator_booking.unit %>
<%= I18n.t("email.elevator.email") %>: <%= @elevator_booking.user.email %>
<% if @elevator_booking.moveType == 2 %>
  <%= I18n.t("email.elevator.deposit") %>: $500
  <%= I18n.t("email.elevator.amount") %>: $<%= @elevator_booking.deposit - 500 %>
  <%= I18n.t("email.elevator.total") %>: $<%= @elevator_booking.deposit %>
<% end %>

<%= I18n.t("email.salutation") %>
<%= I18n.t("email.signature") %>
