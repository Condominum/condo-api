<!DOCTYPE html>
<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
  <body>
    <h1><%= I18n.t("email.elevator.pending_notification_subject") %></h1>
    <table border=0>
      <tr>
        <td span=2>
          <% if @elevator_booking.moveType == 2 %>
            <%= I18n.t("email.elevator.move") %>
          <% else %>
            <%= I18n.t("email.elevator.delivery") %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td><%= I18n.t("email.elevator.start") %></td><td><%= @elevator_booking.start.in_time_zone("Eastern Time (US & Canada)").strftime("%B %-d, %Y %l:%M %p") %></td>
      </tr>
      <tr>
        <td><%= I18n.t("email.elevator.end") %></td><td><%= @elevator_booking.end.in_time_zone("Eastern Time (US & Canada)").strftime("%B %-d, %Y %l:%M %p") %></td>
      </tr>
      <tr>
        <td><%= I18n.t("email.elevator.unit") %></td><td><%= @elevator_booking.unit %></td>
      </tr>
      <% if @elevator_booking.moveType == 2 %>
        <tr>
          <td><%= I18n.t("email.elevator.deposit") %></td><td>$500</td>
        </tr>
        <tr>
          <td><%= I18n.t("email.elevator.amount") %></td><td>$<%= @elevator_booking.deposit - 500 %></td>
        </tr>
        <tr>
          <td><%= I18n.t("email.elevator.total") %></td><td>$<%= @elevator_booking.deposit %></td>
        </tr>
      <% end %>
    </table>
    <p>
      <a href="https://www.arrowlofts.org/admin">Visit adminstration to approve request.</a>
    </p>
    <p><%= I18n.t("email.salutation") %></p>
    <p><%= I18n.t("email.signature") %></p>
  </body>
</html>
